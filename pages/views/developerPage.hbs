<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DeveloperPage</title>
    <link rel="stylesheet" href="bootstrap-5.0.2-dist/css/bootstrap.min.css">

    <style>
        body {
            background: linear-gradient(90deg, #252222 0%, gray 80%);
        }

        .all {
            width: 100%;
            display: flex;
            justify-content: space-between;
        }

        .wrap {
            width: 500px;
            height: 300px;
            border: 2px solid rgb(14, 14, 13);
            margin-top: 40px;

        }

        .con button {
            width: 400px;
            height: 50px;
            margin-top: 16px;
            margin-left: 100px;
            border-radius: 20px;
            background-color: rgb(146, 143, 143);
            color: white;
            font-size: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 700;
            font-style: italic;
        }
   
    </style>

</head>

<body>
    <div class="all">


        <div class="con">
            <div class="d-flex justify-content-start">
                <button type="button" class="btn1">Refresh-Users</button>
            </div>
            <div class="d-flex justify-content-start">
                <button type="button" class="btn8">Refresh-tasks</button>
            </div>
            <div class="d-flex justify-content-start">
                <button type="button" class="btn2">Get-All-Users</button>
            </div>
            <div class="d-flex justify-content-start">
                <button type="button" class="btn3">Update-user</button>
            </div>
            <div class="d-flex justify-content-start">
                <button type="button" class="btn4">Delete-User</button>
            </div>
            <div class="d-flex justify-content-start">
                <button type="button" class="btn9">People-of-send-cv</button>
            </div>
            <div class="d-flex justify-content-start">
                <button type="button" class="btn11">Add-new-Car</button>
            </div>
            <div class="d-flex justify-content-start">
                <button type="button" class="btn12">inf-of-Add-new-Car</button>
            </div>
            <div class="d-flex justify-content-start">
                <button type="button" class="btn13">Order-of-Cars</button>
            </div>
        </div>

    </div>


    <script>
        const but1 = document.querySelector(".btn1")
        const but2 = document.querySelector(".btn2")
        const but3 = document.querySelector(".btn3")
        const but4 = document.querySelector(".btn4")
        const but8 = document.querySelector(".btn8")
        const but9 = document.querySelector(".btn9")
        const but11 = document.querySelector(".btn11")
        const but12 = document.querySelector(".btn12")
        const but13 = document.querySelector(".btn13")
        function submitform(e) {
            e.preventDefault()
            fetch("http://localhost:3000/userDetails", {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                .then(response => response.json())
                .then((data) => {
                    console.log(data)


                }).catch((e) => {
                    console.log(e)
                })

        }

        // location.reload()

        but1.addEventListener('click', submitform)
        /////////////////////////////////////////////////////////////////////////////////
        function submitform2(e) {
            e.preventDefault()
            fetch("http://localhost:3000/tasksDetails", {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                .then(response => response.json())
                .then((data) => {
                    console.log(data)


                }).catch((e) => {
                    console.log(e)
                })

        }

        // location.reload()

        but8.addEventListener('click', submitform2)
        ///////////////////////////////////////////////////////////////////////////
        but2.addEventListener("click", () => {
            setTimeout(() => {
                window.location = "UserInf"

            }, 100)
        })
        but3.addEventListener("click", () => {
            setTimeout(() => {
                window.location = "updataUser"

            }, 100)
        })
        but4.addEventListener("click", () => {
            setTimeout(() => {
                window.location = "deleteUser"

            }, 100)
        })
        but9.addEventListener("click", () => {
            setTimeout(() => {
                window.location = "task1Inf"

            }, 100)
        })
        but11.addEventListener("click", () => {
            setTimeout(() => {
                window.location = "task2"

            }, 100)
        })
        but12.addEventListener("click", () => {
            setTimeout(() => {
                window.location = "inf-new-car"

            }, 100)
        })
        but13.addEventListener("click", () => {
            setTimeout(() => {
                window.location = "showOrderofCars"

            }, 100)
        })

    </script>

</body>

</html>