<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="bootstrap-5.0.2-dist/css/bootstrap.min.css">
    <title>task1</title>
    <style>
        .btn {
            border: 1px solid black;
            font-style: italic;
        }
    </style>
</head>

<body>
    <section style="height: 613px;">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Compelete the Form</h2>

                                <form method="post" enctype="multipart/form-data" class="form">

                                    <div class="form-outline mb-4">
                                        <input type="text" id="form3Example3cg"
                                            class="form-control form-control-lg input1" />
                                        <label class="form-label" for="form3Example3cg">Job-title</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="form3Example3cg"
                                            class="form-control form-control-lg input2" />
                                        <label class="form-label" for="form3Example3cg">description</label>
                                    </div>

                                    <label class="lbl1"></label>
                                    <input type="file" name="datafile" id="fil">

                                    <div class="d-flex justify-content-center">

                                        <button class="btn" type="submit">upload</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>

        const button = document.querySelector(".btn")
        function submitform(e) {
            e.preventDefault()

            const images = document.querySelector("#fil")
            const titles = document.querySelector(".input1").value
            const descriptions = document.querySelector(".input2").value
            const noteForm = document.querySelector(".form")

            const formData = new FormData()
            formData.append("image", images.files[0])
            formData.append("title", titles)
            formData.append("description", descriptions)       
            console.log(Array.from(formData))
             if (titles === "" || descriptions === "" || images === "") {
                alert("please complete the form")
            } else {
                fetch("http://localhost:3000/task1", {
                    method: "POST",               
                    body: formData
                })
                  .then((res)=>res.json())

                    .then((data) => {
                        console.log(data)
                        alert("You have done Send Your Form")
                    }).catch((e) => {
                        console.log(e)
                    })
            }
            

            

        }
        button.addEventListener("click", submitform)

    </script>


</body>

</html>